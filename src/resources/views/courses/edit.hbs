<div class="mt-4">
    <h3>Cập nhật khoá học</h3>

    <form class="mt-4" method="POST" action="/courses/{{course._id}}?_method=PUT">
        <div class="form-group">
            <label for="name" class="form-label">Tên khoá học</label>
            <input type="text" class="form-control" value="{{course.name}}" id="exampleInputEmail1" name="name">
        </div>

        <div class="form-group">
            <label for="description" class="form-label">Mô tả khoá học</label>
            <textarea class="form-control" id="exampleInputEmail1" name="description">{{course.description}}</textarea>
        </div>

        <div class="form-group">
            <label for="level" class="form-label">Trình độ</label>
            <input type="text" class="form-control" value="{{course.level}}" id="exampleInputEmail1" name="level">
        </div>

        <div class="form-group">
            <label for="videoID" class="form-label">Video ID</label>
            <input type="text" class="form-control" value="{{course.videoID}}" id="exampleInputEmail1" name="videoID">
        </div>

        <button type="submit" class="btn btn-primary">Lưu</button>
    </form>
</div>